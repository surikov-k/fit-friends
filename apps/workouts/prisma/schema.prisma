// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/@prisma/workouts-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Skill {
  Beginner
  Amateur
  Professional
}

enum WorkoutType {
  Yoga
  Running
  Boxing
  Stretching
  Crossfit
  Aerobics
  Pilates
}

enum Gender {
  Male
  Female
  Common
}

enum TimeSpan {
  Short
  Normal
  Long
  Longest
}

model Review {
  id        Int      @id @default(autoincrement())
  clientId  String
  rating    Int
  text      String
  createdAt DateTime @default(now())
  Workout   Workout  @relation(fields: [workoutId], references: [id])
  workoutId Int
}

model Workout {
  id             Int         @id @default(autoincrement())
  background     String
  title          String
  skill          Skill
  type           WorkoutType
  price          Int
  calories       Int
  description    String
  gender         Gender
  video          String
  rating         Float
  coachId        String
  isSpecialOffer Boolean
  duration       TimeSpan
  createdAt      DateTime    @default(now())
  reviews        Review[]
}
